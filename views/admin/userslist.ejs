<% include  layout/navbar.ejs %>


<style>
    .add{
        color:#de7022 !important;
    }
.top {
    margin-bottom: 29px;
    float: left;
    width: 100%;
}
    </style>
    <section class="content">
        <div class="container-fluid">
            <div class="row clearfix">
              <div class="col-lg-12 col-md-8 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Users list</h2>
                        </div>
                        <div class="top">
                        <div class="col-xs-4">
                            <br>
                                <h2 class="card-inside-title">Gender Filter</h2>
                                <div class="form-line">
                      
                                        <select id="dropdown1" class="form-control show-tick" name="status" >
                                            <option value="">All</option>
                                           <option value="Male.">Male</option>
                                           <option value="Female">Female</option>
                                        </select>
                                       
                                    </div>
                            </div>
                            <div class="col-xs-4">
                                <br>
                                    <h2 class="card-inside-title">Country Filter</h2>
                                    <div class="form-line">
                          
                                            <select id="dropdown2" class="form-control show-tick" name="status" >
                                                <option value="">All</option>
                                                <% for(let j in data) { %>
                                                <option><%=data[j].country%></option>
                                                <% } %>
                                            </select>
                                           
                                        </div>
                                </div>
                         </div>
                        <div class="body">
                            <div class="row clearfix" >
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="table-responsive">
                                    <table class="table" id="usertable" >
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>Users Name</th>
                                                <th>Email</th>
                                                <th>Posts</th>
                                                <th>Country</th>
                                                <th>Gender</th>
                                                <th class="text-center" >Image</th>
                                                <th class="text-center">Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                         <tbody>
                                            <% for(let i in response) { %>
                                           
                                             <tr>
                                                <td><%=parseInt(i)+1%></td>
                                                <td><%=response[i].username%></td>
                                                <td><%=response[i].email%></td>
                                                <td><%=response[i].totalposts%></td>
                                                <td><%=response[i].country%></td>
                                                <td><% if( response[i].gender==1){ %>Male<span style="display:none">.</span><% }
                                                      else{
                                                     %>
                                                    Female
                                                    <% } %>
                              
                                                  </td>
                                                <td class="text-center">
                                                    <div class="image">
                                                        <% if(response[i].profileImage=="") { %>                                                       
                                                            <img src="../images/img.jpg" width="48" height="48" alt="">
                                                        <% } else { %>
                                                            <img src="../images/users/<%=response[i].profileImage%>" width="48" height="48" alt="User">
                                                        <% } %>
                                                     </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="switch">
                                                        <label><input class="changestatus"  id="<%=response[i].id%>" table="users" type="checkbox" <%=(response[i].status==1) ? 'checked' : "" %> >
                                                            <span class="lever"></span></label>
                                                    </div>
                                                 </td>
                                                <td class="text-center">
                                                    <ul class="header-dropdown">
                                                        <li class="dropdown">
                                                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                                                <i class="material-icons add">view_list</i>
                                                            </a>
                                                            <ul class="dropdown-menu pull-right">
                                                                <li><a href="javascript:void(0);" rel="<%=response[i].id%>" table="users" class="delete waves-effect waves-block"><i class="material-icons"> delete</i>Delete</a></li>
                                                               <!--  <li><a href="javascript:void(0);" class=" waves-effect waves-block"><i class="material-icons"> remove_red_eye</i>View</a></li> -->
                                                                <li><a href="/admin/viewuser?id=<%=response[i].id%>"   class="edit waves-effect waves-block"><i class="material-icons"> mode_edit</i>View/Edit</a></li>
                                                            </ul>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                            <% } %>
                                         </tbody>
                                      </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>
