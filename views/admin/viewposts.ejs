<% include  layout/header.ejs %>
<% include  layout/navbar.ejs %>

<style>
.image2 {
    float: left;
    width: 25%;
    box-shadow: 0px 0px 4px #ddd;
    padding: 15px;
}
.form-group.post_diff {
    padding: 10px 20px;
}
.image2 {
    float: left;
    width: 25%;
    box-shadow: 0px 0px 4px #ddd;
    padding: 15px;
}
.image2 h3 {
    font-size: 19px;
    letter-spacing: 1px;
    margin: 10px 0px;
    float: left;
    width: 100%;
}
</style>
    <section class="content">
        <div class="container-fluid">
            <div class="row clearfix">
               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2> All Post Details</h2>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                <form  enctype='multipart/form-data'>
                                  <div class="col-sm-6">
                                    <div class="form-group">
                                      <label for="" class="col-sm-5 control-label">User Name</label>
                                        <div class="form-line">
                                            <input type="text" id="username" value="<%=response[0].post.user.username%>" name="name" class="form-control" placeholder="" disabled>
                                        </div>
                                    </div>
                                  </div>
                                  <div class="col-sm-6">
                                    <div class="form-group">
                                      <label for="" class="col-sm-5  control-label">Description</label>
                                        <div class="form-line">
                                            <input type="text" name="country" value="<%=response[0].post.description %>"class="form-control" placeholder="" disabled>
                                        </div>
                                    </div>
                                </div>
                               
                                    <div class="row clearfix">
                                      <div class="col-sm-12">
                                        <label>Image</label>
                                     
                                       
                                      
                                    </div>
                                        <div class="form-group post_diff">
                                          <%for(let i in response){%>
                                            <% 
                                                let likes=Math.round((response[i].Totalimages/response[0].Votes)*100)
                                            %>
                                            <div class="image2">
                                                     <img id="blah2" src="../images/post/<%=response[i].images%>"  alt="User"/> 
                                                     <h3><%=likes%>%</h3>
                                                   
                                             </div>
                                             <%}%>
                                       </div>
                                      
                                  </div>
                                       
                                
                                   
                                  </div>
                                                           
                                     
                            </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                
            </div>
        </div>
    </section>
<% include  layout/footer.ejs %>
